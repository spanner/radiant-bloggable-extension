- embed = (@blogging.subject.is_a?(Embed)) ? @blogging.subject : Embed.new
- f.fields_for :embed, embed do |ef|
  
  #choose_Embed
    = ef.hidden_field :id
    %p
      = ef.label :url, "Title"
      = ef.text_field :title, :class => 'textbox'

    %p
      = ef.label :body, "Embedded html"
      = ef.text_area :body, :class => 'textarea'
